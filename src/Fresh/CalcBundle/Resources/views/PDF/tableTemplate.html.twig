<table style="font-size:11pt;">
    {#{{ dump(finishArr) }}#}
    {% for value in finishArr %}

        {% if total is defined %}

            {% if loop.index > 17 %}
                <tr>
                    <td width="280" height="17">{{ value.name }}</td>
                    <td width="120" height="17"></td>
                    <td width="100" align="center">{{ value.value }}</td>
                    <td width="120" align="center">{{ value.price }}</td>
                </tr>
            {% endif %}

        {% else %}

            {% if loop.index <= 17 %}
                {% if loop.index == 3 and programming is defined %}
                    <tr>
                        <td width="280" height="17" style="font-weight: bold">разработка функионала:</td>
                        <td width="120" height="17"></td>
                        <td width="100" align="center"></td>
                        <td width="120" align="center"></td>
                    </tr>
                {% endif %}
                <tr>
                    <td width="280" height="17">{{ value.name }}</td>
                    <td width="120" height="17"></td>
                    <td width="100" align="center">{{ value.value }}</td>
                    <td width="120" align="center">{{ value.price }}</td>
                </tr>
            {% endif %}

        {% endif %}

        {% if single is defined %}
            {% if loop.index == 3 and programming is defined %}
                <tr>
                    <td width="300" height="17">разработка функионала:</td>
                    <td width="100" height="17"></td>
                    <td width="100" align="center"></td>
                    <td width="120" align="center"></td>
                </tr>
            {% endif %}
            <tr>
                <td width="300" height="17">{{ value.name }}</td>
                <td width="100" height="17"></td>
                <td width="100" align="center">{{ value.value }}</td>
                <td width="120" align="center">{{ value.price }}</td>
            </tr>
        {% endif %}

    {% endfor %}
    {% if total is defined %}
        <tr style="font-size:11pt;font-weight:lighter;background-color:red;" bgcolor=\"red\">
            <td width="300" height="17" style="font-size:11pt;font-weight:lighter;background-color:#2f80b4;"><b>{{ total.name }}</b></td>
            <td width="100" height="17"></td>
            <td width="100" align="center" style="font-size:11pt;font-weight:bold;"><b>{{ total.value }}</b></td>
            <td width="120" align="center" style="font-size:11pt;font-weight:bold;"><i>{{ total.price }}</i></td>
        </tr>
    {% endif %}
</table>